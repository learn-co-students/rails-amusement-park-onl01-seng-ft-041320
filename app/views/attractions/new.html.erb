<h1>Create a new Attraction</h1>

<div>
  <%= form_for @attraction, controller: 'attraction', action: 'create' do |f| %>
    <p>
      <%= f.label :name %>
      <%= f.text_field :name  %>
    </p>
    <p>
      <%= f.label "How happy are you? (1-5 scale)" %>
      <%= f.number_field :happiness_rating, in: 1..5 %>
    </p>
    <p>
      <%= f.label "Nausea Rating (1-5 scale)" %>
      <%= f.number_field :nausea_rating, in: 1..5 %>
    </p>
    <p>
      <%= f.label "Minimum Height Requirements (in inches)" %>
      <%= f.number_field :min_height %>
    </p>
    <p>
      <%= f.label "How many tickets to ride this ride?" %>
      <%= f.number_field :tickets %>
    </p>
    <p>
      <%= f.submit "Create Attraction" %>
    </p>
  <% end %>
</div>
