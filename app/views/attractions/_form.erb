<%= form_for @attraction, html: {class: 'new_attraction'} do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label "Height Requirement (in inches)" %><br>
    <%= f.text_field :min_height %>
  </p>
  <p>
    <%= f.label "How fun is it? (1-5 scale)" %><br>
    <%= f.text_field :happiness_rating %>
  </p>
  <p>
    <%= f.label "How nauseous-inducing is it? (1-5 scale)" %><br>
    <%= f.text_field :nausea_rating %>
  </p>
  <p>
    <%= f.label "How many tickets does it cost?" %><br>
    <%= f.text_field :tickets %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
