<h1>Login</h1>

<%= form_for @user, url: signin_path, method: :post do |f| %>
<%= f.label :name, "Name" %>
<%= f.collection_select :name, User.all, :name, :name, prompt: "Select Your Name" %>

<%= f.label :password, "password" %>
<%= f.password_field :password %>

<%= f.submit "Sign In" %>
<% end %>
<br>
Or <%= link_to(controller: 'users', action: 'new') { 'Sign Up' } %>!